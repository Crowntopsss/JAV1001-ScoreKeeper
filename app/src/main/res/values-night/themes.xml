<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TemitopeAdebiyi_Score" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/orangeDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <!-- Button Style. -->
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:backgroundTint">@color/whiteColor</item>
    </style>

    <!-- Radio Style. -->
    <style name="radioStyle">
        <item name="android:buttonTint">@color/whiteColor</item>
    </style>

    <style name="textStyle" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/orange</item>
    </style>
</resources>